{
  "name": "ts-mdb",
  "version": "1.1.0",
  "type": "module",
  "repository": {
    "url": "https://github.com/dantescur/tsmdb"
  },
  "description": "A type-safe, intuitive TypeScript library for the TMDB API",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "tmdb",
    "api",
    "typescript",
    "movies",
    "tv"
  ],
  "author": "Cesar Daniel <cesardaniel.9611@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsdown --from-vite vitest",
    "release": "semantic-release",
    "commit": "cz",
    "gen:types": "openapi-typescript ./api.specs.json -o ./src/types/schema.ts",
    "lint:package": "publint",
    "docs": "typedoc --options typedoc.json",
    "dev": "tsdown --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "prepublishOnly": "pnpm run build",
    "prepare": "husky",
    "uml": "tsuml2 --glob \"{./src/**/[!__tests__]*/!(*.test|*.d).ts,./src/!(__tests__|types)/**/!(*.test|*.d).ts,./src/client.ts}\" --outFile ./docs/architecture.svg --memberAssociations --exportedTypesOnly --nomnoml \"#arrowSize: 1.5\" \"#.interface: fill=#e6f7ff\" \"#direction: right\""
  },
  "devDependencies": {
    "@arethetypeswrong/core": "^0.18.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@faker-js/faker": "^9.8.0",
    "@mswjs/source": "^0.3.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^22.15.29",
    "@vitest/coverage-v8": "^3.2.2",
    "@vitest/ui": "3.2.2",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "msw": "^2.9.0",
    "openapi-types": "^12.1.3",
    "openapi-typescript": "^7.8.0",
    "publint": "^0.3.12",
    "rolldown-plugin-dts": "^0.13.8",
    "semantic-release": "^24.2.5",
    "tsdown": "^0.12.7",
    "typescript": "~5.8.3",
    "unplugin-unused": "^0.5.0",
    "vite": "npm:rolldown-vite@latest",
    "vitest": "^3.2.2"
  },
  "packageManager": "pnpm@10.10.0+sha512.d615db246fe70f25dcfea6d8d73dee782ce23e2245e3c4f6f888249fb568149318637dca73c2c5c8ef2a4ca0d5657fb9567188bfab47f566d1ee6ce987815c39",
  "dependencies": {
    "axios": "^1.9.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
